.pagination
  display flex
  justify-content center
  align-items flex-start
  &__prev
    ib()
    pos relative
    color black
    fontify 18px 400 18px
    mr 50px
    mt 6px
    border-bottom 1px solid black
    transition .5s left, .5s opacity, .5s border
    &:hover
      border-color transparent
    @media $lDesktopMedium
      fontify 15px 400 15px
    @media $LandscapeMax
      fontify 0px 400 15px
      mr 30px
    &:before
      content ""
      pos absolute
      l -16px
      t 3px
      size 8px 12px
      background url("data:image/png;base64,") no-repeat center
    @media $desktopMin
      mr 30px
    &.disabled
      opacity .25
      border-bottom transparent
  &__next
    ib()
    pos relative
    color black
    fontify 18px 400 18px
    ml 50px
    mt 6px
    border-bottom 1px solid black
    transition .5s left, .5s opacity, .5s border
    &:hover
      border-color transparent
    @media $lDesktopMedium
      fontify 15px 400 15px
    @media $LandscapeMax
      fontify 0px 400 15px
      ml 30px
    &:before
      content ""
      pos absolute
      r -16px
      t 3px
      size 8px 12px
      background url("data:image/png;base64,") no-repeat center
      transform scaleX(-1)
    &.disabled
      opacity .25
      border-bottom transparent
  &__list
    display flex
  &__item
    text-align center
    color $dark
    fontify 24px 700 19px
    @media $lDesktopMedium
      fontify 21px 700 19px
    & + &
      ml 28px
      @media $desktopMin
        ml 18px
    &-href
      pos relative
      display inline-block
      vertical-align middle
      color black
      fontify 24px 700 19px
      transition .7s border
      border-bottom 1px solid alpha(black, 1)
      @media $lDesktopMedium
        fontify 21px 700 19px
      &:not(a):after
        border-bottom transparent
      ^[-1].active &
        color $red
        border-bottom transparent
