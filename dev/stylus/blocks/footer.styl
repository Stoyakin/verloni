.footer
  margin 20px
  color black
  display flex
  align-items center
  min-height 110px
  background url('../i/board-bg.jpg') no-repeat repeat center
  @media $LandscapeMin
    padding 20px 0
  & > .container
    display flex
    justify-content space-between
    @media $desktopMin
      flex-wrap wrap
  &__main
    display flex
    @media $desktopMin
      w 100%
    @media $LandscapeMin
      flex-direction column
  &__copy
    fontify 15px 400 26px
  &__dev
    color black
    fontify 15px 400 26px
    @media $desktopMin
      mt 8px
    @media $LandscapeMin
      mt 18px
    span
      border-bottom 2px solid $red
      transition .7s border
      white-space nowrap
    &:hover span
      border-color transparent
  &__socials
    display flex
    align-items center
    ml 50px
    @media $LandscapeMin
      ml 0
      mt 15px
    &-item
      & + &
        ml 26px
    &-href
      db()
      transition .7s background
      &[data-type="inst"]
        size 12px
        background url("data:image/png;base64,") no-repeat center
        &:hover
          background url("data:image/png;base64,") no-repeat center
      &[data-type="yt"]
        size 14px 10px
        background url("data:image/png;base64,") no-repeat center
        &:hover
          background url("data:image/png;base64,") no-repeat center
      &[data-type="vk"]
        size 15px 8px
        background url("data:image/png;base64,") no-repeat center
        &:hover
          background url("data:image/png;base64,") no-repeat center
      &[data-type="od"]
        size 8px 13px
        background url("data:image/png;base64,") no-repeat center
        &:hover
          background url("data:image/png;base64,") no-repeat center
      &[data-type="fb"]
        size 6px 12px
        background url("data:image/png;base64,") no-repeat center
        &:hover
          background url("data:image/png;base64,") no-repeat center
      
      

body:not(.index) .footer
  mt 115px

.locker
  dn()
  pos fixed
  justify-content center
  align-items center
  flex-direction column
  t 0
  l 0
  r 0
  b 0
  padding 20px
  z-index 99
  bgc white
  &__text
    color $dark
    fontify 16px 400 22px
    mt 10px
    
html.lock 
  .locker
    display flex
  .content
    opacity 0